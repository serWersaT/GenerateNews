<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Главная", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Слова", "Words", "Main", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Фразы", "Phrases", "Main", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Новости", "News", "Main", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Управление словами", "ConfigWords", "Main", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Управление фразами", "ConfigPhrases", "Main", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Список векторов", "Vectors", "Main", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <div>
        <hr />
        <footer class="container body-content">
            <nav aria-label="...">
                <ul class="pagination liListPages">
                    <li class="page-item"><a class="page-link" href="java:void(0)" tabindex="-1" id="refStart">В начало</a></li>
                    <li class="page-item"><a class="page-link" href="java:void(0)" id="refPrevious">Назад</a></li>
                    <li class="page-item"><a class="page-link" href="java:void(0)" id="refCurrent">1</a></li>
                    <li class="page-item"><a class="page-link" href="java:void(0)" id="refNext">Вперед</a></li>
                    <li class="page-item"><a class="page-link" href="java:void(0)" id="refFinish">В конец</a></li>
                </ul>
            </nav>
        </footer>
    </div>

    @*<label>@Request.Url.GetLeftPart(UriPartial.Path)</label>*@

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Script", false)
    <script src="~/Scripts/FunctionJQDefault.js?ver=1"></script>

        <script src="~/Scripts/FunctionJQWord.js?ver=6"></script>

    <script src="~/Scripts/FunctionJQPhrase.js?ver=1"></script>
    <script src="~/Scripts/FunctionJQNews.js?ver=1"></script>
    <script src="~/Scripts/FunctionJQConfigWord.js?ver=1"></script>
    <script src="~/Scripts/FunctionJQConfigPhrase.js?ver=1"></script>
    <script src="~/Scripts/FunctionJQIndex.js?ver=1"></script>
</body>
</html>